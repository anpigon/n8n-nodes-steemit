{
  "name": "n8n-nodes-steemit",
  "version": "0.1.1",
  "description": "n8n node to publish and manage content on Steemit",
  "keywords": [
    "n8n-community-node-package",
    "steemit",
    "blockchain",
    "publishing",
    "blog",
    "content"
  ],
  "license": "MIT",
  "homepage": "https://github.com/anpigon/n8n-nodes-steemit",
  "author": {
    "name": "anpigon",
    "email": "anpigon@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anpigon/n8n-nodes-steemit.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/SteemitApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Steemit/Steemit.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^4.0.2",
    "n8n-core": "^1.14.1",
    "n8n-workflow": "^1.70.0",
    "prettier": "^3.5.3",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "n8n-workflow": ">=0.x"
  },
  "dependencies": {
    "@upvu/dsteem": "^1.1.7",
    "undici": "^7.5.0"
  }
}
